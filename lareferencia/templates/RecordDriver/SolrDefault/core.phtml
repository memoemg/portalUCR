      <dt><?= $this->transEsc('Status')?></dt>
      <dd><?= $this->transEsc($data['status_str'])?></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt><?=  $this->transEsc('Publication Year') ?></dt>
      <dd><?= $data['publishDate'][0] ?></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt><?= $this->transEsc('Country')?></dt>
      <dd><?= $data['network_name_str']?></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt><?= $this->transEsc('Institution')?></dt>
      <dd><?= $data['instname_str']?></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt><?= $this->transEsc('Repository')?></dt>
      <dd><?= $data['reponame_str']?></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt><?=  $this->transEsc('Description') ?></dt>
      <dd><?=$data['description']?> </dd>
    </dl>
    <dl class="dl-horizontal">
      <dt><?= $this->transEsc('Language')?></dt>
      <dd><?= $this->transEsc($data['language'][0])?></dd>
    </dl>
   
    <dl class="dl-horizontal">
      <dt><?= $this->transEsc('OAI Identifier')?></dt>
      <dd><?=$data['oai_identifier_str']?> </dd>
    </dl>
    <dl class="dl-horizontal">
      <dt><?= $this->transEsc('Get full text')?></dt>
      <dd><? foreach($data['url'] as $url):?><a href="<?= $url ?>" target="_blank"><?= $url ?></a><br><? endforeach;?></dd>
