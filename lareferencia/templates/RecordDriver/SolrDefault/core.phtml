      <dt><?= $this->transEsc('License')?></dt>
      <dd><?= $data['rights_invalid_str_mv'][0] ?></dd>
    </dl-->

    <dl class="dl-horizontal">
      <dt><?= $this->transEsc('Topic')?></dt>
      <dd><? foreach($data['topic'] as $topic):?><?= $topic ?><br><? endforeach; ?></dd>
    </dl>
</div>
